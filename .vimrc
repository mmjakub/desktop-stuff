set termguicolors
colorscheme slate

set number
set laststatus=2
set ruler

set shiftwidth=4
set tabstop=4
set expandtab
set softtabstop=4
set shiftround
set autoindent
set smartindent

set guioptions-=m  "menu bar
set guioptions-=T  "toolbar
set guioptions-=r  "scrollbar
set guioptions-=R  "scrollbar
set guioptions-=l  "scrollbar
set guioptions-=L  "scrollbar

map <A-h> <C-w>h
map <A-j> <C-w>j
map <A-k> <C-w>k
map <A-l> <C-w>l
map <A-p> <C-w>p
map <A-H> <C-w>H
map <A-J> <C-w>J
map <A-K> <C-w>K
map <A-L> <C-w>L
map <A-=> <C-w>=
map <A-_> <C-w>_
map <A--> <C-w>10-
map <A-+> <C-w>10+
map <A-<> <C-w>20<
map <A->> <C-w>20>
map <A-c> <C-w>c
